{{#each this}}
<li class="photo-item">
    <div class="photo-card">
        <img src="{{webformatURL}}" alt="{{tags}} image" data-large_img="{{largeImageURL}}" class="photo-image"/>

        <div class="stats">
            <p class="stats-item">
            <i class="material-icons">thumb_up</i>
            {{likes}}
            </p>
            <p class="stats-item">
            <i class="material-icons">visibility</i>
            {{views}}
            </p>
            <p class="stats-item">
            <i class="material-icons">comment</i>
            {{comments}}
            </p>
            <p class="stats-item">
            <i class="material-icons">cloud_download</i>
            {{downloads}}
            </p>
        </div>
        <a class="material-icons load" download href="{{webformatURL}}" type="image/jpeg">
            file_download
        </a>
    </div>
</li>
{{/each}}
